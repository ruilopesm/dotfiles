# Decrease volume
"pactl set-sink-volume @DEFAULT_SINK@ -2000"
    m:0x0 + c:122
    XF86AudioLowerVolume # FN + F6

# Increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +2000"
    m:0x0 + c:123
    XF86AudioRaiseVolume # FN + F7

# Toggle mute
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    m:0x0 + c:121
    XF86AudioMute # FN + F5

# Increate brightness
"xbacklight -inc 10"
    m:0x0 + c:233
    XF86MonBrightnessUp # FN + F2

# Decrease brightness
"xbacklight -dec 10"
    m:0x0 + c:232
    XF86MonBrightnessDown # FN + F2

# Open flameshot gui
"flameshot gui"
    m:0x14 + c:115
    Control + Mod2 + End # CTRL + PRT SC

# Open power menu
"sh $HOME/.config/rofi/power-menu/power-menu.sh"
    m:0x4 + c:49
    Control + backslash # CTRL + Backslash

