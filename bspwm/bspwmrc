#!/bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width 2
bspc config window_gap 12

bspc config split_ratio 0.52
bspc config borderless_monocle true
bspc config gapless_monocle true

bspc rule -a discord desktop='^2'
bspc rule -a spotify desktop='^3'
bspc rule -a slack desktop='^5'

# Startup scripts and programs
betterlockscreen -w dim 
sh $HOME/dotfiles/polybar/launcher.sh

picom & disown
sh $HOME/.fehbg
blugon --setcurrent 4500

setxkbmap pt
xbindkeys --file $HOME/.xbindkeysrc

nm-applet & disown
blueman-applet & disown

warp-cli register; warp-cli connect
