{
    // editor, workspace, workbench, window and explorer
    "editor.fontFamily": "Fira Code, monospaced",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.tokenColorCustomizations": {
        "[Material Night Eighties]": {
            "comments": "#76bb87"
        },
        "[One Dark Pro Darker]": {
            "comments": "#76bb87"
        }
    },
    "editor.lightbulb.enabled": "off",
    "editor.insertSpaces": true,
    "editor.indentSize": "tabSize",
    "editor.detectIndentation": true,
    "editor.suggestSelection": "first",
    "editor.inlayHints.enabled": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.fontLigatures": false,
    "editor.minimap.enabled": false,
    "editor.cursorBlinking": "phase",
    "editor.inlineSuggest.enabled": true,
    "editor.codeLens": false,
    "editor.semanticHighlighting.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.startupEditor": "none",
    "workbench.layoutControl.enabled": false,
    "workbench.editor.labelFormat": "short",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "material-product-icons",
    "workbench.externalBrowser": "firefox-developer-edition",
    "workbench.sideBar.location": "right",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.compactFolders": true,
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "package.json": "pnpm-lock*, package-lock*, bun.lockb",
        "tailwind.config.*": "tailwind.config*, postcss.config*",
        ".env": ".env.*, .envrc",
        ".env.local": ".env*",
        ".env.dev": ".env*",
        "README.*": "LICENSE*, CONTRIBUTING*, CODE_OF_CONDUCT*, REQUIREMENTS*, DEV*",
        "mix.exs": "mix.lock, .iex.exs",
        "Dockerfile*": "Dockerfile*, docker-compose.*",
        "docker-compose.*": "docker-compose.*, .dockerignore, linux.yml, windows.yml, mac.yml, darwin.yml",
        ".pre-commit-config*": ".pre-commit-*",
        "requirements.txt": "requirements-dev.txt",
        "gradlew": "build.gradle*, gradlew*, settings.gradle*",
        "Cargo.toml": "Cargo.lock",
        "appsettings.json": "appsettings.*.json",
        ".npmrc": ".npmrc.*, .nvmrc",
        "next.*": "next-*",
        ".gitignore": ".gitattributes",
        "CMakeLists.txt": "CMakeCache.txt",
        "vcpkg.json": "vcpkg*",
        ".formatter.exs": ".credo.exs"
    },
    "files.autoSave": "afterDelay",
    "window.titleBarStyle": "native",
    "window.commandCenter": false,
    "window.menuBarVisibility": "compact",
    "window.zoomLevel": 1,
    "window.customTitleBarVisibility": "never",

    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/parser.out": true,
        "**/parsetab.py": true,
        "**/.venv": true,
        "**/.next": true,
        "**/.elixir_ls": true,
        "**/_build": true,
        "**/.turbo": true,
        "**/.astro": true,
        "**/CMakeFiles/": true,
        "**/vcpkg_installed/": true,
        "**/.vagrant/": true,
        "**/.ruff_cache/": true,
        "**/target/": true,
        "**/*.sage.py": true,
        "**/*.d": true
    },
    "files.associations": {
        "*.log.processed": "log"
    },

    // terminal
    "terminal.external.linuxExec": "x-terminal-emulator",
    "terminal.external.windowsExec": "C:\\Windows\\System32\\cmd.exe",
    "terminal.explorerKind": "external",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.showExitAlert": false,

    // git
    "git.autofetch": true,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.defaultDateFormat": null,
    "gitlens.statusBar.enabled": false,
    "gitlens.codeLens.enabled": false,
    "git.openRepositoryInParentFolders": "never",

    // extensions
    "extensions.ignoreRecommendations": true,

    // vim keybinds
    "vim.handleKeys": {
        "<C-w>": false,
        "<C-k>": false,
        "<C-c>": false,
        "<C-p>": false,
        "<C-d>": false
    },

    // python
    "python.languageServer": "Default",
    "python.envFile": "${workspaceFolder}/data/.env",
    "python.analysis.completeFunctionParens": true,
    "python.analysis.autoImportCompletions": true,
    "[python]": {
        "editor.formatOnType": true
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    // c and c++
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 2 }",
    "C_Cpp.doxygen.generatedStyle": "/**",
    "C_Cpp.default.enableConfigurationSquiggles": false,
    "C_Cpp.dimInactiveRegions": false,
    "[makefile]": {
        "editor.inlayHints.enabled": "off"
    },
    "cmake.configureSettings": {
        "CMAKE_TOOLCHAIN_FILE": "/home/rui/Clones/vcpkg/scripts/buildsystems/vcpkg.cmake"
    },

    // html, css, tailwind and js
    "html.autoClosingTags": true,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "css.lint.unknownAtRules": "ignore",
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
    },

    // java
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-21",
            "path": "/usr/lib/jvm/java-21-openjdk",
            "default": true
        }
    ],
    "java.jdt.ls.java.home": "/usr/lib/jvm/java-21-openjdk",
    "maven.terminal.useJavaHome": true,

    // misc
    "[typst]": {
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },
    "[typst-code]": {
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // emmet
    "emmet.triggerExpansionOnTab": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "phoenix-heex": "html"
    },
    "emmet.syntaxProfiles": {
        "javascript": "jsx"
    },

    // copilot
    "github.copilot.chat.codeGeneration.useInstructionFiles": true,
    "github.copilot.enable": {
        "*": true,
    },
    "github.copilot.editor.enableAutoCompletions": false,
    "github.copilot.nextEditSuggestions.enabled": false,
    "github.copilot.nextEditSuggestions.fixes": false,
    "chat.agent.enabled": true,
}
